generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id       Int    @id @default(autoincrement())
  name     String @unique
  unit     String?
  category String?
  brand    String?
  stock    Int    @default(0)
  status   String?
  image    String?

  inventoryLogs InventoryLog[]

  @@map("products")
}

model InventoryLog {
  id        Int      @id @default(autoincrement())
  productId Int
  oldStock  Int
  newStock  Int
  changedBy String
  timestamp DateTime @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("inventory_logs")
}

